# STG環境設定
AWS_REGION=ap-northeast-1

# S3設定（STG環境用）
S3_BUCKET_NAME=news-audio-files-kenchang198-stg
S3_PREFIX=audio/

# AI API設定
# OpenAI API（レガシーサポート）
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini API
GOOGLE_API_KEY=your_google_api_key
GEMINI_MODEL=gemini-1.5-pro

# AI プロバイダー設定（'openai' または 'gemini'）
AI_PROVIDER=gemini

# Amazon Polly設定
POLLY_VOICE_ID=Takumi
POLLY_ENGINE=neural

# アプリケーション設定
SUMMARY_MAX_LENGTH=400
PROGRAM_NAME=Tech News Radio (STG)
TIME_ZONE=Asia/Tokyo